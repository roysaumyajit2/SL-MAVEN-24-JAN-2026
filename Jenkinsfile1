pipeline
{
	agent any
		tools
		{
			maven 'MAVEN_HOME'
		}
		stages
		{
			stage('Welcome Stage')
			{
				steps
				{
					echo 'Welcome to Pipeline'
				}
			}
			
			stage('Clean Stage')
			{
				steps
				{
					sh 'mvn clean'
				}
			}
			stage('Build Stage')
			{
				steps
				{
					sh 'mvn install'
				}
			}
			stage('Build Success')
			{
				steps
				{
					echo 'Build Success'
				}
			}	
      stage('Email communication')
			{
				steps
				{
					echo 'roysaumyajit@gmail.com'
				}
			}	
			stage('Final Success')
			{
				steps
				{
					echo 'Final Success'
				}
			}	
		}
}
